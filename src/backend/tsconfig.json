
{
  "extends": "./tsconfig.nestjs.json",
  "compilerOptions": {
    "outDir": "../../dist/backend",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "../*"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
